<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="200px"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="欢迎使用本次智能视频处理服务～" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/dp_16">

        <TextView
            android:id="@+id/tv_label_snack1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@drawable/shape_circle_blue"
            android:gravity="center"
            android:text="Sum"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <Button
            android:id="@+id/btn_tab_snack1"
            style="?borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_toRightOf="@+id/tv_label_snack1"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:text="视频总结"
            android:textAllCaps="false"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_below="@id/tv_label_snack1"
            android:layout_alignLeft="@id/btn_tab_snack1"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/gray" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="@dimen/dp_16">

        <TextView
            android:id="@+id/tv_label_snack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@drawable/shape_circle_blue"
            android:gravity="center"
            android:text="cover"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <Button
            android:id="@+id/btn_tab_snack2"
            style="?borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_toRightOf="@+id/tv_label_snack2"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:text="视频封面"
            android:textAllCaps="false"
            android:textSize="@dimen/sp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:layout_below="@id/tv_label_snack2"
            android:layout_alignLeft="@id/btn_tab_snack2"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@color/gray" />

    </RelativeLayout>
</LinearLayout>
